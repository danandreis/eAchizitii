@using eAchizitii.Data.ViewModels
@model RolMV

@{

    ViewData["Title"] = "Adaugare Rol";

}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h3> Adaugare rol utilizator</h3>
        </p>
    </div>

    <div class="col-md-4 offset-4">
        <form asp-action="AdaugaRol">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group" style="padding:5px;">
                <label asp-for="Nume" class="control-lable"></label>
                <input asp-for="Nume" class="form-control"/>
                <span asp-validation-for="Nume" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a class="btn btn-outline-primary" asp-action="ListaUtilizatori">Inapoi</a>
                <input type="submit" class="btn btn-outline-success float-end" value="Adauga" asp-action="AdaugaRol"/>
            </div>

        </form>

    </div>
</div>