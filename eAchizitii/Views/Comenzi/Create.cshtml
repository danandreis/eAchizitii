@using eAchizitii.Data.ViewModels
@model ComandaVM

@{

    ViewData["Title"] = "Inregistrare comanda noua";

}

<div class="row text" >
    <div class="col-md-6 offset-3">
        <p class="text-center">
            <h3> Inregistrare comanda noua</h3>
        </p>
    </div>

    <div class="col-md-6 offset-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly"></div>

             <div class="form-group" style="padding:5px;"> 
                
                @if(ViewBag.Actualizare == 1)
                {

                    <input type="submit" class="btn btn-outline-success float-end" value="Actualizare" asp-action="Actualizare" />

                }
                else
                {
    
                    <input type="submit" class="btn btn-outline-success float-end" value="Adauga" asp-action="Create" />
                    
                }
                
                <a class="btn btn-outline-secondary float-end" style="padding-right:7px;" asp-action="Inapoi">
                    Inapoi
                </a>
            
            </div>
            
            <table class="table">
                <thead>
                    <tr>
                        <th style="width:50px;">Id</th>
                        <th style="width:300px;">Denumire</th>
                        <th style="width:200px;">Cantitate</th>
                        <th style="width:100px;">Um</th>
                    </tr>
                </thead>
                                    
                <tbody style="height:150px;">
                                    
                @{
                    int indx = 1;

                    for (int i=0;i<Model.listaProduse!.Count;i++)
                    {
                                
                        <tr>
                            <td class="align-middle" style="width:50px;">@indx</td>
                                
                            <td class="align-middle" style="width:300px;">
                                <div class="form-group">
                                    <input type="hidden" asp-for="@Model.listaProduse[i].Id"/>
                                    <input type="hidden" asp-for="@Model.listaProduse[i].Denumire"/>
                                    <input type="hidden" asp-for="@Model.listaProduse[i].Um"/>
                                                                    
                                    @Html.DisplayFor(p=>Model.listaProduse[i].Denumire)
                                </div>
                            </td>
                                
                            <td class="align-middle" style="width:200px;"> 
                                <div class="form-group">
                                            
                                    <input class="form-control" type="text" style="width:75px;text-align:center;" 
                                        asp-for="@Model.listaProduse[i].Cantitate"/> 
                                                                                        
                                </div>
                            </td>
                            
                            <td class="align-middle" style="width:100px;">@Html.DisplayFor(p=>Model.listaProduse[i].Um) </td>
                        </tr>

                        indx++;
                    }
                }
                                    
                </tbody>
            </table>
            
            <div class="form-group" style="padding:5px">
                <label asp-for="Valoare" class="control-label"></label>
                <input asp-for="Valoare" class="form-control" />
                <span asp-validation-for="Valoare" class="text-danger"></span>
            </div>

            <div class="form-group" style="padding:5px;"> 
                <label asp-for="AdresaLivrareId" class="control-label"></label>
                <select asp-for="AdresaLivrareId" class="form-control" asp-items="@ViewBag.AdreseLivrare"></select>
                <span asp-validation-for="AdresaLivrareId" class="text-danger"></span>
            </div>

            <div class="form-group" style="padding:5px;"> 
                <label asp-for="PersoanaContactId" class="control-label"></label>
                <select asp-for="PersoanaContactId" class="form-control" asp-items="@ViewBag.PersoaneContact"></select>
                <span asp-validation-for="PersoanaContactId" class="text-danger"></span>
            </div>

            <div class="form-group" style="padding:5px;"> 
                <label asp-for="Observatii" class="control-label"></label>
                <textarea asp-for="Observatii" class="form-control"></textarea>
                <span asp-validation-for="Observatii" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>