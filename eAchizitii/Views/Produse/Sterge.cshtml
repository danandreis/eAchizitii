@using eAchizitii.Data.Enum
@model Produs

@{

    ViewData["Title"] = "Stergere produs";

}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Stergere produs</h4>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group" style="padding-bottom:10px;">
                    <label asp-for="Denumire" class="control-label"></label>
                    <input asp-for="Denumire" class="form-control" readonly/>
                </div>
                
                <div class="form-group" style="padding-bottom:5px;">
                    <label asp-for="Um" class="control-label"></label>
                    <select asp-for="Um" class="form-control" 
                        asp-items="Html.GetEnumSelectList<ListaUM>()" disabled>
                    </select> 
                </div>

                <div class="form-group">
                    <form asp-action="ConfirmaStergere">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirma" class="btn btn-outline-danger float-end" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Lista</a>
                </div>
            </div>
        </div>
    </div>
</div>