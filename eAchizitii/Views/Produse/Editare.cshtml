@using eAchizitii.Data.Enum
@model Produs

@{

    ViewData["Title"] = "Editare produs";

}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Editare produs</h4>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Editare">
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group" style="padding-bottom:10px;">
                        <label asp-for="Denumire" class="control-label"></label>
                        <input asp-for="Denumire" class="form-control" />
                        <span asp-validation-for="Denumire" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group" style="padding-bottom:5px;">
                        <label asp-for="Um" class="control-label"></label>
                        <select asp-for="Um" class="form-control" 
                            asp-items="Html.GetEnumSelectList<ListaUM>()">
                        </select> 
                        <span asp-validation-for="Um" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Actualizare" asp-action="Editare" 
                            class=" btn btn-outline-success float-end"/>
                        <a class="btn btn-outline-secondary" asp-action="Index">Lista</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>